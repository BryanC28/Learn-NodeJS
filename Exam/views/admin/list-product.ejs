<%- include('../includes/head.ejs') %>
<body class="vh-100 d-flex flex-column gradient-custom ">
    <%- include('../includes/header.ejs') %>
    <main class="d-flex flex-column container flex-grow-1  mt-5">
            <div class="card-body mt-5">
                <% if(products.length> 0) {%>
                <table  class="table table-bordered table-success align-middle">
                    <!--id="dataTable"-->
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Product Title</th>
                            <th>Product Price</th>
                            <th>Description</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let product of products) { %>
                        <tr>
                            <td class="align-middle" style="width:70px;">
                                <img src="/<%=product.imageUrl%> " alt="<%= product.title %>" style="height:70px;">
                            </td>
                            <td>
                                <%= product.title %>
                            </td>
                            <td>
                                <%= product.price %>
                            </td>
                            <td>
                                <%= product.description %>
                            </td>
                            <td>
                                <a href="/admin/edit-product/<%= product._id %> " class=" btn btn-success ">Edit</a>
                            </td>
                            <td>
                                <!-- <a href="/admin/delete-product" class="btn btn-danger confirmDelete">Delete</a> -->
                                <form action="/admin/delete-product" method="post">
                                    <input type="hidden" name="productId" value="<%=product._id%>">
                                    <button class="btn btn-danger " type="submit" style="width: 100px;">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% } %> 
                    </tbody>
                </table>
                <% }else{ %>
                    <h1>No Product found</h1>
                <% } %>
            </div>
            
    </main>
   

    <%- include('../includes/foot.ejs') %>
</body>
</html>
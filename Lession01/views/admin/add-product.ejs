<%- include('../includes/head.ejs') %>
<body class="vh-100 d-flex flex-column">
    <%- include('../includes/navbar.ejs') %>
    <!-- <main>
        <h1>Add Product Admin</h1>
    </main> -->
    <main class="d-flex flex-column container flex-grow-1">
        <form action="/admin/add-product" method="post" class="w-100 m-auto" style="max-width: 330px;" enctype="multipart/form-data">
            <h1 style="text-align: center; color: red;">ADD PRODUCT</h1>
            <div class="form-floating mb-3">
                <input type="text" class="form-control mb-3" id="floatingTitle" name="title" placeholder="title">
                <label for="floatingTitle">Title</label>
            </div>
            <div class="form-floating">
                <input type="number" step="0.01" class="form-control mb-3" id="floatingPrice" name="price" placeholder="Price">
                <label for="floatingPrice">Price</label>
            </div>
            <div class="form-floating">
                <textarea type="text" class="form-control mb-3" id="floatingdescription" name="description" placeholder="description" style="height: 100px;"></textarea>
                <label for="floatingdescription">Description</label>
            </div>
            <input type="file" class="form-control mb-3" name="image">
            <button class="btn btn-primary w-100" type="submit">Add Product</button>
        </form>
    </main>

    <%- include('../includes/footer.ejs') %>
</body>
</html>